<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cart_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_cart_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_image_margin" />

    <TextView
        android:id="@+id/item_cart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_text_margin"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/item_cart_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_text_margin"
        android:layout_weight="0"
        android:gravity="right"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/item_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_text_margin"
        android:layout_weight="0"
        android:gravity="right"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/item_cart_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/small_image_margin"
        android:layout_weight="0"
        android:background="@null"
        app:srcCompat="@android:drawable/ic_delete" />

    <ProgressBar
        android:id="@+id/item_cart_progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/small_image_margin"
        android:layout_weight="0"
        android:visibility="gone" />

</LinearLayout>
